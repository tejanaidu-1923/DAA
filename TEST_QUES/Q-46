def count_good_triplets(nums1, nums2):
    n = len(nums1)
    count = 0
    for x in range(n):
        for y in range(x+1, n):
            for z in range(y+1, n):
                if nums1[x] < nums1[y] < nums1[z] and nums2[x] < nums2[y] < nums2[z]:
                    count += 1
    return count

nums1 = [2, 0, 1, 3]
nums2 = [0, 1, 2, 3]
print(count_good_triplets(nums1, nums2))
