def binary_search(arr, x):
    low = 0
    high = len(arr) - 1
    while low <= high:
        mid = (low + high) // 2
        if arr[mid] == x:
            return mid
        elif arr[mid] < x:
            low = mid + 1
        else:
            high = mid - 1
    return -1
arr = [3, 4, 6, -9, 10, 8, 9, 30]
x = 10
result = binary_search(arr, x)
if result != -1:
    print(f"Element {x} is found at position {result}")
else:
    print(f"Element {x} is not found in the array")
