def maxChunksToSorted(arr):
    max_seen = 0
    chunks = 0

    for i in range(len(arr)):
        max_seen = max(max_seen, arr[i])
        if max_seen == i:
            chunks += 1

    return chunks
arr1 = [4, 3, 2, 1, 0]
arr2 = [1, 0, 2, 3, 4]

print(maxChunksToSorted(arr1))
print(maxChunksToSorted(arr2))
